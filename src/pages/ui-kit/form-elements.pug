.wrapper-1
  include ../../components/text-field/text-field.pug
  //- +textfield(title, name, choosetype, id, placeholder, style, hint)
  +textfield("Text Field", "default", "email", "textfield-default", "Email", "", "Default")
  +textfield("Text Field", "hover-focus", "email", "textfield-hover-focus", "This is pretty awesome", "", "hover / focus")
  +textfield("Masked Text Field", "masked", "email", "textfield-masked", "ДД.ММ.ГГГГ", "", "Default")
  include ../../components/dropdown/dropdown.pug
  +dropdown({
            title: "Dropdown", 
            name: "dropdown", 
            id: "dropdown-default", 
            hint: "Default",
            inputType: "text", 
            placeholder: "Сколько гостей", 
            labelClasses: ["textfield__label", "title-h3"], 
            inputClasses: ""
            })
  +dropdown({
            title: "Date Dropdown", 
            name: "date-dropdown", 
            id: "date-dropdown", 
            hint: "",
            inputType: "text", 
            placeholder: "ДД.ММ.ГГГГ", 
            labelClasses: ["textfield__label", "title-h3"], 
            inputClasses: ""
            })(class="dropdown--date")
  +dropdown({
            title: "Filter Date Dropdown", 
            name: "filter-date-dropdown", 
            id: "filter-date-dropdown", 
            hint: "",
            inputType: "text", 
            placeholder: "19 авг - 23 авг", 
            labelClasses: ["textfield__label", "title-h3"], 
            inputClasses: ""
            })



